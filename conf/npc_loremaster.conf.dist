###################################################################################################
#	LOREMASTER NPC
###################################################################################################
#

# -------------------------------------------------------------------------------------
#  Enable the module
#  Enable : 1
#  Disabled = 0
# -------------------------------------------------------------------------------------
Loremaster.Announce = 1

# -------------------------------------------------------------------------------------
#  The name of the Loremaster NPC
#  Default: Crom
# -------------------------------------------------------------------------------------
Loremaster.Name = Crom

# -------------------------------------------------------------------------------------
#  The GUID of the FIRST Loremaster NPC
#  This allows the Loremaster teleport locations to loop.
#  This value is set in the included npc_loremaster.sql file.
#  If this GUID is invalid, a default GUID will be used.
#  Default:     601075
# -------------------------------------------------------------------------------------
FirstLoremasterGUID = 601075

# -------------------------------------------------------------------------------------
#  The spell cast to get the player's attention
#  Default: 44940
#  Disable: 0
# -------------------------------------------------------------------------------------
Loremaster.EmoteSpell = 0

# -------------------------------------------------------------------------------------
#  How often does the NPC emote in milliseconds?
#  Randomly caclulated within range 60000 (1 min, minumum) to 3000000 (5 minutes, max)
#  Default: 60000 (1 minutes, minimum)
#  Disable: 0
# -------------------------------------------------------------------------------------
Loremaster.MessageTimer = 60000

# -------------------------------------------------------------------------------------
#  How many pharases does the NPC have?
#  Default: 3
# -------------------------------------------------------------------------------------
Loremaster.NumPhrases = 3

# -------------------------------------------------------------------------------------
#  NPC Phrases - Add your own!
#  Spoken randomly to the world
# -------------------------------------------------------------------------------------
LM.P1 = "Stay Awhile.. and Listen!"
LM.P2 = "The Old Gods kept many secrets."
LM.P3 = "Have you located any artifacts left behind by the Titans?"

# -------------------------------------------------------------------------------------
#  The gesture the NPC performs when speaking emote text
#  Default: 3 (Wave)
#  Disable: 0
# -------------------------------------------------------------------------------------
#  0  - NONE       
#  1  - TALK       
#  2  - BOW        
#  3  - WAVE       
#  4  - CHEER      
#  5  - EXCLAMATION
#  6  - QUESTION   
#  7  - EAT        
#  11 - LAUGH      
#  14 - RUDE       
#  15 - ROAR       
#  16 - KNEEL      
#  17 - KISS       
#  18 - CRY        
#  19 - CHICKEN    
#  20 - BEG        
#  21 - APPLAUD    
#  22 - SHOUT      
#  23 - FLEX       
#  24 - SHY        
#  25 - POINT      
# -------------------------------------------------------------------------------------   
Loremaster.EmoteCommand = 3
